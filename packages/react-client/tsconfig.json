{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "moduleDetection": "force",
    "moduleResolution": "node16",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2017",
    "module": "Node16"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
